@model AWWW_lab1_gr1_Kulesza.Models.Article

<h1>Dodaj artykuł</h1>

<form asp-route="Add" method="post" class="w3-container">
    <p>
        <label asp-for="Title">Tytuł:</label>
        <input asp-for="Title" class="w3-input w3-border"/>
    </p>
    <p>
        <label asp-for="Lead">Lead:</label>
        <textarea asp-for="Lead" class="w3-input w3-border"></textarea>
    </p>
    <p>
        <label asp-for="Content">Treść:</label>
        <textarea asp-for="Content" class="w3-input w3-border"></textarea>
    </p>
    <p>
        <label asp-for="Author">Autor:</label>
        <select asp-for="AuthorId" asp-items="@ViewBag.authorsList" class="w3-input w3-border"></select>
    </p>
    <p>
        <label asp-for="Tags">Tagi:</label>
        @foreach(var tag in @ViewBag.tagsList)
        {
            <p>
                <label>@tag.Text</label>
                <input type="checkbox" name="Tags" value="@tag.Value" class="w3-check"/>
            </p>
        }
    </p>
    <p>
        <button type="submit" class="w3-btn w3-border">Dodaj</button>
    </p>
</form>


