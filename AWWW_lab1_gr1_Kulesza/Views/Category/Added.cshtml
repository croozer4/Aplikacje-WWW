@model AWWW_lab1_gr1_Kulesza.Models.Category

<h1>Dodano kategorię:</h1>

<div class="w3-card">
	<header class="w3-container w3-blue">
		<h1>@Model.Name</h1>
	</header>

	<div class="w3-container">
		<p>ID kategorii: @Model.Id</p>
		@if (@Model.Articles != null)
		{
			<p><a asp-controller="article" asp-action="index" asp-route-id="@Model.Id">Artykuł</a></p>
		}
	</div>
</div>